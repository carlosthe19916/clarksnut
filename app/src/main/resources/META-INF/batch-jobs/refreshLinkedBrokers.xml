<?xml version="1.0" encoding="UTF-8"?>
<job id="syncLinkedBrokers" xmlns="http://xmlns.jcp.org/xml/ns/javaee"
     xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
     xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/jobXML_1_0.xsd"
     version="1.0">
    <listeners>
        <listener ref="batchLoggerListener"></listener>
    </listeners>
    <flow id="start" next="end">
        <step id="users">
            <chunk>
                <reader ref="jpaItemReader">
                    <properties>
                        <property name="namedQuery" value="getUserWithOfflineToken"></property>
                        <property name="beanType" value="org.openfact.models.db.jpa.entity.UserEntity"></property>
                    </properties>
                </reader>
                <processor ref="refreshLinkedBrokersProcessor"/>
                <writer ref="jpaAdvancedWriter">
                    <properties>
                        <property name="operation" value="merge"></property>
                    </properties>
                </writer>
            </chunk>
        </step>
    </flow>
    <step id="end">
        <batchlet ref="endBatchlet"></batchlet>
        <end on="COMPLETED"/>
    </step>
</job>