<?xml version="1.0" encoding="UTF-8"?>
<job id="readMailJob" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
     xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/jobXML_1_0.xsd"
     version="1.0">
    <listeners>
        <listener ref="loggerListener"></listener>
    </listeners>
    <flow id="refreshUserDataFlow" next="endTask">
        <step id="readUserStep">
            <chunk>
                <reader ref="userWithOfflineTokenReader"/>
                <processor ref="offlineRefreshTokenProcessor"/>
                <writer ref="testWriter"/>
            </chunk>
        </step>

        <step id="readGoogleBrokerStep">
            <chunk>
                <reader ref="userWithOfflineTokenReader"></reader>
                <writer ref="myItemWriter"></writer>
            </chunk>
        </step>
        <step id="readMicrosoftBrokerStep">
            <chunk>
                <reader ref="userWithOfflineTokenReader"></reader>
                <writer ref="myItemWriter"></writer>
            </chunk>
        </step>

        <step id="persistDocumentStep">
            <chunk>
                <reader ref="userWithOfflineTokenReader"></reader>
                <writer ref="myItemWriter"></writer>
            </chunk>
        </step>
    </flow>
    <step id="endTask">
        <batchlet ref="endBatchlet"></batchlet>
        <end on="COMPLETED"/>
    </step>
</job>